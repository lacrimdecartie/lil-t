generator client {
  provider = "prisma-client-js"
  binaryTargets = ["native","debian-openssl-3.0.x","debian-openssl-1.1.x"]
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Map {
  id        String   @id @default(cuid())
  name      String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  nodes     Node[]
  edges     Edge[]
}

model Node {
  id        String   @id @default(cuid())
  mapId     String
  map       Map      @relation(fields: [mapId], references: [id], onDelete: Cascade)
  label     String
  markdown  String?
  color     String?
  x         Float    @default(0)
  y         Float    @default(0)
  width     Float?
  height    Float?
  icon      String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Edge {
  id        String   @id @default(cuid())
  mapId     String
  map       Map      @relation(fields: [mapId], references: [id], onDelete: Cascade)
  sourceId  String
  targetId  String
  label     String?
  color     String?
  style     String?
  directed  Boolean  @default(true)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  labelX Float? 
  labelY Float? 
}
